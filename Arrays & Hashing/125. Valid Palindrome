class Solution {
public:
    bool isPalindrome(string s) {
        string fil ="";
        for(char ch: s){
            if(isalnum(ch)){
                fil+=tolower(ch);
            }
        }
        int left=0;
        int right=fil.size()-1;
        while(left<right){
            if(fil[left]== fil[right]){
                left++;
                right--;
            }
            else{
                return false;
            }
        }
        return true;
    }
};




