class Solution {
public:
    int maxArea(vector<int>& height) {
        int left =0;
        int right = height.size()-1;
        int curr=0;
        int maxarrea=0;
        while(left<right){
            curr = min(height[left],height[right]) * (right-left);
            maxarrea = max(curr, maxarrea);

            if(height[left]<height[right]){
                left++;
            }
            else{
                right--;
            }

        }
        return maxarrea;
    }
};
